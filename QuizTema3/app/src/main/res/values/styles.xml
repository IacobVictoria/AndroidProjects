<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PurpleTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purpleLight</item>
        <item name="colorPrimaryVariant">@color/purpleDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purpleSecondary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/purpleSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:elevation">8dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="LongTextStyle">
        <item name="android:textColor">@color/purpleDark</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>